@model Infrastructure.Models.PaginatedList<Infrastructure.Dtos.User.UserDto>

@{
    Layout = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "_Layout";
    ViewData["Title"] = "Index";
}

<h1>@Infrastructure.Helpers.Translator.TranslateText("","Index")</h1><hr>

<p>
    <form method="get" asp-action="index" class="d-inline">
        <input type="search" name="q" value="@Context.Request.Query["q"]" />
    </form>
    <a asp-action="Create" class="float-end btn btn-danger">@Infrastructure.Helpers.Translator.TranslateText("","Create New")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().IsAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().IsNewsPublisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().IsNewsEditor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().IsGalleryPublisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().IsGalleryEditor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.IsAdmin)</td>
            <td>@Html.DisplayFor(modelItem => item.IsNewsPublisher)</td>
            <td>@Html.DisplayFor(modelItem => item.IsNewsEditor)</td>
            <td>@Html.DisplayFor(modelItem => item.IsGalleryPublisher)</td>
            <td>@Html.DisplayFor(modelItem => item.IsGalleryEditor)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Infrastructure.Helpers.Translator.TranslateText("","Edit")</a> |
                <form method="post" class="d-inline" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('@Infrastructure.Helpers.Translator.TranslateText("","Are you sure you want to delete this?")');">
                                           <button class="btn btn-link p-0" type="submit">@Infrastructure.Helpers.Translator.TranslateText("","Delete")</button>
                                        </form>
            </td>
        </tr>
}
    </tbody>

</table>
