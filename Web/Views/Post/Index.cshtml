@using Core.Enums;
@model Infrastructure.Models.PaginatedList<Infrastructure.Dtos.Post.PostDto>

@{
    Layout = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest" ? null : "_Layout";
    ViewData["Title"] = "Index";
    var PostType = Context.Request.Query["Type"];
    ViewData["ActiveItem"] = PostType == "0" ? "news" : PostType == "1" ? "protocols" : PostType == "2" ? "achievements" : PostType == "3" ? "services" : "";
}

<h1>@Infrastructure.Helpers.Translator.TranslateText("","Index")</h1><hr>

<p>
    <form method="get" asp-action="index" class="d-inline">
        <input type="search" name="q" value="@Context.Request.Query["q"]" />
        <select name="Type" class="ms-3 me-3">
            @foreach (var item in Enum.GetValues(typeof(PostType)))
            {
                <option value="@item">@Enum.GetName(typeof(PostType), item)</option>
            }
        </select>
    </form>
    <a asp-action="Create" asp-route-PostType="@PostType" class="float-end btn btn-danger">@Infrastructure.Helpers.Translator.TranslateText("","Create New")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().MainFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().PostType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().TitleAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().TitleEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().PostState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
                <td>
                 <img src="/File/GetImage/@item.MainFileId?Width=150&Height=100" class="img-fluid"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleEn)
            </td>
            <td>
                @Enum.GetName(typeof(PostState), item.PostState)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Infrastructure.Helpers.Translator.TranslateText("","Edit")</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Infrastructure.Helpers.Translator.TranslateText("","Details")</a> |
                    @*<a asp-action="CreateParagraph" asp-route-PostId="@item.Id">@Infrastructure.Helpers.Translator.TranslateText("","Add Paragraphs")</a> |
                    <a asp-action="CreateAffiliateLaw" asp-route-PostId="@item.Id">@Infrastructure.Helpers.Translator.TranslateText("","Add AffiliateLaws")</a> |*@
                <form method="post" class="d-inline" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('@Infrastructure.Helpers.Translator.TranslateText("","Are you sure you want to delete this?")');">
                                           <button class="btn btn-link p-0" type="submit">@Infrastructure.Helpers.Translator.TranslateText("","Delete")</button>
                                        </form>
            </td>
        </tr>
}
    </tbody>
    <tfoot>
        <tr>
            <td>@Model.Items.Count / @Model.TotalCount</td>
            <td>
                @for (int i = 1; i == Model.TotalPages; i++)
                {
                    <a class="btn btn-link ps-2 pe-2" asp-action="index" asp-route-q="@Context.Request.Query["q"]" asp-route-page="@i" asp-route-size="10">@i</a>
                }
            </td>
        </tr>
    </tfoot>
</table>